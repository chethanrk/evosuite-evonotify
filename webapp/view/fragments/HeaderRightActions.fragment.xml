<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Button id="idHeaderBtnMessageManager" icon="sap-icon://alert" text="{= ${message>/}.length }" type="Emphasized" press="onMessageManagerPress"/>
	<Button icon="sap-icon://refresh" tooltip="{i18n>btn.refresh}" visible="{= ${viewModel>/sCurrentView} !== 'CreateNotification' }" press="onPressRefresh"/>
	<Button id="idButtonAboutDialog" icon="sap-icon://sys-help" tooltip="{i18n>tit.infoDialogTitle}" press="onIconPress"/>
</core:FragmentDefinition>