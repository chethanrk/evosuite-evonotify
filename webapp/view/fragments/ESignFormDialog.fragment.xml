<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:smartForm="sap.ui.comp.smartform">
	<Dialog title="{i18n>tit.eSignDialogTitle}" contentWidth="35%" resizable="true" type="Message">
		<content>
			<form:SimpleForm id="idESignDialog" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="4" labelSpanS="12"
				emptySpanXL="2" emptySpanL="2" emptySpanM="2" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
				<form:content>
					<Label text="{i18n>xfld.username}"></Label>
					<Text text="{user>/Fullname} ({user>/Username})"></Text>
					<Label text="{/#PMNotificationESign/PASSWORD/@sap:label}"></Label>
					<Input type="Password" value="{PASSWORD}" required="true"></Input>
					<Label text="{/#PMNotificationESign/NOTES/@sap:label}" required="true"></Label>
					<TextArea value="{NOTES}"/>
				</form:content>
			</form:SimpleForm>
		</content>
		<beginButton>
			<Button text="{i18n>btn.cancel}" press="onCloseESignDialog"/>
		</beginButton>
		<endButton>
			<Button id="eSignDialogSaveBtn" text="{i18n>btn.save}" type="Emphasized" press="onPressESignSave"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>