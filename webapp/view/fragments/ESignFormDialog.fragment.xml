<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:smartForm="sap.ui.comp.smartform">
	<Dialog title="{i18n>tit.eSignDialogTitle}" contentWidth="50%" contentHeight="50%" type="Message" xmlns:smartField="sap.ui.comp.smartfield" >
		<content>
		<form:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="4" labelSpanS="12" emptySpanXL="2" emptySpanL="2"
				emptySpanM="2" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
				<form:content>
					<Label text="{/#PMNotificationESign/USERNAME/@sap:label}"></Label>
					<Text text="{user>/Fullname} ({user>/Username})"></Text>
				</form:content>
			</form:SimpleForm>
			<smartForm:SmartForm editable="true" fieldGroupIds="eSignSmartForm" >
				<smartForm:Group>
					<smartForm:GroupElement>
						<smartField:SmartField value="{PASSWORD}"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{NOTES}"/>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
		<beginButton>
			<Button text="{i18n>btn.cancel}" press="onCloseESignDialog"/>
		</beginButton>
		<endButton>
			<Button id="eSignDialogSaveBtn" text="{i18n>btn.save}" type="Emphasized" press="onPressESignSave"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>