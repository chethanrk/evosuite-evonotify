<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartField="sap.ui.comp.smartfield"
                         xmlns:smartForm="sap.ui.comp.smartform" xmlns:layout="sap.ui.layout">
    <Dialog title="{i18n>tit.addItem}" class="sapUiTinyMargin" id="idAddNotifTask" draggable="true" stretch="true">
        <content>

            <smartForm:SmartForm editTogglable="false" editable="true">
                <smartForm:Group label="{i18n>tit.generalSection}">
                    <smartForm:layout>
                        <layout:GridData span="L6 M6 S12"/>
                    </smartForm:layout>
                    <smartForm:GroupElement visible="{= !${viewModel>/isNewEntry}}">
                        <smartField:SmartField id="MaintenanceNotificationItem" value="{MaintenanceNotificationItem}" />
                    </smartForm:GroupElement>
                    <smartForm:GroupElement visible="{= !${viewModel>/isNewEntry}}">
                        <smartField:SmartField value="{MaintenanceNotificationTask}" />
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{MaintNotifTaskText}" />
                    </smartForm:GroupElement>
                </smartForm:Group>

                <smartForm:Group label="{i18n>tit.codeSection}">
                    <smartForm:layout>
                        <layout:GridData span="L6 M6 S12"/>
                    </smartForm:layout>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{MaintNotifTaskCodeGroup}" >
                            <smartField:configuration>
                                <smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
                            </smartField:configuration>
                        </smartField:SmartField>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{MaintNotifTaskCode}" >
                            <smartField:configuration>
                                <smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
                            </smartField:configuration>
                        </smartField:SmartField>
                    </smartForm:GroupElement>
                </smartForm:Group>

                <smartForm:Group label="{i18n>tit.statusSection}" visible="{= !${viewModel>/isNewEntry}}">
                    <smartForm:layout>
                        <layout:GridData span="L6 M6 S12" linebreak="true"/>
                    </smartForm:layout>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{ConcatenatedActSysStsName}" >
                            <smartField:configuration>
                                <smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
                            </smartField:configuration>
                        </smartField:SmartField>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{ConcatenatedActUserStsName}" >
                            <smartField:configuration>
                                <smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
                            </smartField:configuration>
                        </smartField:SmartField>
                    </smartForm:GroupElement>
                </smartForm:Group>

                <smartForm:Group label="{i18n>tit.responsibilitySection}">
                    <smartForm:layout>
                        <layout:GridData span="L6 M6 S12"/>
                    </smartForm:layout>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{ResponsiblePersonFunctionCode}" >
                            <smartField:configuration>
                                <smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
                            </smartField:configuration>
                        </smartField:SmartField>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{ResponsiblePerson}" >
                            <smartField:configuration>
                                <smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
                            </smartField:configuration>
                        </smartField:SmartField>
                    </smartForm:GroupElement>
                </smartForm:Group>

                <smartForm:Group label="{i18n>datesSectionTitle}">
                    <smartForm:layout>
                        <layout:GridData span="L6 M6 S12"/>
                    </smartForm:layout>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{PlannedStartDate}" >
                            <smartField:configuration>
                                <smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
                            </smartField:configuration>
                        </smartField:SmartField>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{PlannedStartTime}" />
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{PlannedEndDate}" >
                            <smartField:configuration>
                                <smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
                            </smartField:configuration>
                        </smartField:SmartField>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{PlannedEndTime}" />
                    </smartForm:GroupElement>
                </smartForm:Group>
            </smartForm:SmartForm>

        </content>
        <beginButton>
            <Button text="{i18n>btn.cancel}" press="onPressCancel"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>btn.save}" type="Emphasized" press="onPressSave"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>