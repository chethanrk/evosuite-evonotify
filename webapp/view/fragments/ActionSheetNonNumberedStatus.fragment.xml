<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ActionSheet title="{i18n>btn.changeStatus}" showCancelButton="true" placement="Bottom"
		buttons="{ path:'templateProperties>/functionsSet/nonNumberedUserStatus/', templateShareable:true }">
		<buttons>
			<Button text="{templateProperties>Description}" press="onSelectStatus"
				visible="{parts: [{path:'templateProperties>Function'}, {path:'viewModel>/NotificationAllows'} ], formatter:'.formatter.showNonNumberedStatusOption'}">
<customData>
					<core:CustomData key="key" value="{templateProperties>Function}"/>
					<core:CustomData key="type" value="{templateProperties>FUNCTION_TYPE}"/>
				</customData>
			</Button>
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>