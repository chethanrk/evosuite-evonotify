<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:smartForm="sap.ui.comp.smartform" xmlns:layout="sap.ui.layout">
	<Dialog title="{viewModel>/addEditEntryTitle}" class="sapUiTinyMargin" id="idAddNotifActivity" draggable="true" contentWidth="100%">
		<content>
			<smartForm:SmartForm id="SmartNotificationActivityForm" editTogglable="false" editable="true">
				<smartForm:Group label="{i18n>tit.generalSection}">
					<smartForm:layoutData>
						<layout:GridData span="L6 M6 S12"/>
					</smartForm:layoutData>
					<smartForm:GroupElement visible="{= !${viewModel>/isNewEntry}}">
						<smartField:SmartField value="{MaintNotificationActivity}"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{MaintNotifActyTxt}"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{ActivitySortNumber}">
							<smartField:configuration>
							<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId" preventInitialDataFetchInValueHelpDialog="false"/>
						</smartField:configuration>
						</smartField:SmartField>
					</smartForm:GroupElement>
				</smartForm:Group>
				<smartForm:Group label="{i18n>tit.codeSection}">
					<smartForm:layoutData>
						<layout:GridData span="L6 M6 S12"/>
					</smartForm:layoutData>
					<smartForm:GroupElement>
						<smartField:SmartField value="{MaintNotifActivityCodeGroup}">
							<smartField:configuration>
								<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
							</smartField:configuration>
						</smartField:SmartField>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{MaintNotifActivityCode}">
							<smartField:configuration>
								<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
							</smartField:configuration>
						</smartField:SmartField>
					</smartForm:GroupElement>
				</smartForm:Group>
				<smartForm:Group label="{i18n>tit.datesSection}">
					<smartForm:layoutData>
						<layout:GridData span="L6 M6 S12" linebreak="true"/>
					</smartForm:layoutData>
					<smartForm:GroupElement>
						<smartField:SmartField value="{PlannedStartDate}">
							<smartField:configuration>
								<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
							</smartField:configuration>
						</smartField:SmartField>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{PlannedStartTime}"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{PlannedEndDate}">
							<smartField:configuration>
								<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
							</smartField:configuration>
						</smartField:SmartField>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{PlannedEndTime}"/>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
		<beginButton>
			<Button text="{i18n>btn.cancel}" press="onPressCancel"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>btn.save}" type="Emphasized" press="onPressSave"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>