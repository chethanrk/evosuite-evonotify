<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:smartForm="sap.ui.comp.smartform" xmlns:layout="sap.ui.layout">
	<Dialog title="{viewModel>/addEditEntryTitle}" class="sapUiTinyMargin" id="idAddNotifItem" draggable="true" contentWidth="100%">
		<content>
			<smartForm:SmartForm editable="true">
				<smartForm:Group label="{i18n>tit.generalSection}">
					<smartForm:layoutData>
						<layout:GridData span="L6 M6 S12"/>
					</smartForm:layoutData>
					<smartForm:GroupElement visible="{= !${viewModel>/isNewEntry}}">
						<smartField:SmartField value="{MaintenanceNotificationItem}"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{MaintNotifItemText}"/>
					</smartForm:GroupElement>
				</smartForm:Group>
				<smartForm:Group label="{i18n>tit.objectSection}">
					<smartForm:layoutData>
						<layout:GridData span="L6 M6 S12"/>
					</smartForm:layoutData>
					<smartForm:GroupElement>
						<smartField:SmartField value="{MaintNotifObjPrtCodeGroup}">
							<smartField:configuration>
								<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
							</smartField:configuration>
						</smartField:SmartField>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{MaintNotifObjPrtCode}">
							<smartField:configuration>
								<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
							</smartField:configuration>
						</smartField:SmartField>
					</smartForm:GroupElement>
				</smartForm:Group>
				<smartForm:Group label="{i18n>tit.damageSection}">
					<smartForm:layoutData>
						<layout:GridData span="L6 M6 S12" linebreak="true"/>
					</smartForm:layoutData>
					<smartForm:GroupElement>
						<smartField:SmartField value="{MaintNotifDamageCodeGroup}">
							<smartField:configuration>
								<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
							</smartField:configuration>
						</smartField:SmartField>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{MaintNotifDamageCode}">
							<smartField:configuration>
								<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
							</smartField:configuration>
						</smartField:SmartField>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
		</content>
		<beginButton>
			<Button text="{i18n>btn.cancel}" press="onPressCancel"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>btn.save}" type="Emphasized" press="onPressSave"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>