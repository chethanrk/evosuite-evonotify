<mvc:View controllerName="com.evorait.evosuite.evonotify.controller.NotificationDetail" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:blocks="com.evorait.evosuite.evonotify.block" xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<template:alias name=".AH" value="sap.ui.model.odata.AnnotationHelper">
		<uxap:ObjectPageLayout id="notificationDetailPage" enableLazyLoading="false" isChildPage="true" showFooter="false" busy="{viewModel>/busy}"
			busyIndicatorDelay="{viewModel>/delay}">
			<uxap:headerTitle>
				<uxap:ObjectPageHeader id="objectPageHeader" objectTitle="{DESCRIPTION}" objectSubtitle="{NOTIFICATION_NO}">
					<uxap:actions>
						<uxap:ObjectPageHeaderActionButton id="editNotificationButton" text="{i18n>btn.edit}" hideText="false" press="onPressEdit" type="Emphasized"
							visible="{parts: ['ENABLE_NOTIFICATION_CHANGE','user>/ENABLE_NOTIFICATION_UPDATE','viewModel>/editMode'], formatter:'.formatter.isVisible'}"/>
						<uxap:ObjectPageHeaderActionButton id="cancelNotificationButton" text="{i18n>btn.cancel}" hideText="false" press="onPressCancel"
							visible="{viewModel>/editMode}"/>
						<uxap:ObjectPageHeaderActionButton id="saveNotificationButton" text="{i18n>btn.save}" hideText="false" press="onPressSave" type="Emphasized"
							visible="{viewModel>/editMode}"/>
						<MenuButton id="idStatusChangeMenu" text="{i18n>btn.changeSystemStatus}"
							visible="{parts: ['ENABLE_NOTIFICATION_CHANGE','user>/ENABLE_NOTIFICATION_UPDATE', 'viewModel>/editMode'], formatter:'.formatter.showStatusButton'}">
							<menu>
								<Menu itemSelected="onSelectStatus" items="{path: 'notificationFunctionModel>/results'}">
									<items>
										<MenuItem key="{notificationFunctionModel>Function}" text="{notificationFunctionModel>Description}"/>
									</items>
								</Menu>
							</menu>
						</MenuButton>
					</uxap:actions>
					<uxap:breadcrumbs>
						<Breadcrumbs currentLocationText="{/#PMNotification/NOTIFICATION_NO/@sap:label} {NOTIFICATION_NO}">
							<Link text="{i18n>tit.notifications}" press="onNavBack"/>
						</Breadcrumbs>
					</uxap:breadcrumbs>
					<uxap:navigationBar>
						<core:Fragment fragmentName="com.evorait.evosuite.evonotify.view.fragments.SubPageHeader" type="XML"/>
					</uxap:navigationBar>
				</uxap:ObjectPageHeader>
			</uxap:headerTitle>
			<uxap:headerContent>
				<template:with path="meta>com.sap.vocabularies.UI.v1.HeaderFacets#NotifDetailHeader" helper=".AH.resolvePath" var="headerDetails">
					<core:Fragment fragmentName="com.evorait.evosuite.evonotify.view.templates.ObjectHeadTemplate" type="XML"/>
				</template:with>
			</uxap:headerContent>
			<uxap:sections>
				<template:with path="meta>com.sap.vocabularies.UI.v1.Facets#NotifDetailTabs" helper=".AH.resolvePath" var="contentTabs">
					<template:repeat list="{contentTabs>}">
						<template:if test="{:= ${contentTabs>Core.Description/String} === 'Form' || ${contentTabs>Org.OData.Core.V1.Description/String} === 'Form'}">
							<template:then>
								<uxap:ObjectPageSection title="{path:'contentTabs>com.sap.vocabularies.Common.v1.Label',formatter:'.AH.format'}">
									<uxap:subSections>
										<uxap:ObjectPageSubSection>
											<uxap:blocks>
												<template:with path="contentTabs>Facets" var="facets">
													<core:Fragment fragmentName="com.evorait.evosuite.evonotify.view.templates.SmartFormTemplate" type="XML"/>
												</template:with>
											</uxap:blocks>
										</uxap:ObjectPageSubSection>
									</uxap:subSections>
								</uxap:ObjectPageSection>
							</template:then>
							<template:elseif
								test="{:= ${contentTabs>Core.Description/String} === 'Table' || ${contentTabs>Org.OData.Core.V1.Description/String} === 'Table'}">
								<uxap:ObjectPageSection title="{path:'contentTabs>com.sap.vocabularies.Common.v1.Label',formatter:'.AH.format'}"
									visible="{= !${viewModel>/editMode}}">
									<uxap:subSections>
										<uxap:ObjectPageSubSection>
											<uxap:blocks>
												<template:if
													test="{:= ${contentTabs>Core.LongDescription/String} === 'ItemsTab' || ${contentTabs>Org.OData.Core.V1.LongDescription/String} === 'ItemsTab'}">
													<template:then>
														<blocks:items.ItemsBlock id="block--{:= ${path:'contentTabs>Core.LongDescription/String'} }"/>
													</template:then>
													<template:elseif
														test="{:= ${contentTabs>Core.LongDescription/String} === 'TasksTab' || ${contentTabs>Org.OData.Core.V1.LongDescription/String} === 'TasksTab'}">
														<blocks:tasks.TasksBlock id="block--{:= ${path:'contentTabs>Core.LongDescription/String'} }"/>
													</template:elseif>
													<template:elseif
														test="{:= ${contentTabs>Core.LongDescription/String} === 'ActivitiesTab' || ${contentTabs>Org.OData.Core.V1.LongDescription/String} === 'ActivitiesTab'}">
														<blocks:activities.ActivitiesBlock id="block--{:= ${path:'contentTabs>Core.LongDescription/String'} }"/>
													</template:elseif>
												</template:if>
											</uxap:blocks>
										</uxap:ObjectPageSubSection>
									</uxap:subSections>
								</uxap:ObjectPageSection>
							</template:elseif>
						</template:if>
					</template:repeat>
				</template:with>
			</uxap:sections>
		</uxap:ObjectPageLayout>
	</template:alias>
</mvc:View>