<mvc:View
	controllerName="com.evorait.evolite.evonotify.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:table="sap.ui.table">

	<semantic:FullscreenPage
		id="page"
		navButtonPress="onNavBack"
		showNavButton="true"
		title="{i18n>worklistViewTitle}">
		<semantic:addAction>
			<semantic:AddAction press="onSemanticButtonPress"/>
		</semantic:addAction>
		
		<semantic:content>
			
			<fb:FilterBar reset="onReset" search="onSearch" showRestoreButton="true" showClearButton="true">
				<fb:filterItems>
					<fb:FilterItem name="A" label="labelA">
						<fb:control>
							<Input type="Text"/>
						</fb:control>				
					</fb:FilterItem>
				</fb:filterItems>
			
				<fb:filterGroupItems>
					<fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="A" label="labelA" labelTooltip="Tooltip GroupItem Example">
						<fb:control>
							<Input type="Text"/>
						</fb:control>				
					</fb:FilterGroupItem>
					
					<fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="B" label="labelB">
						<fb:control>
							<Input type="Text"/>
						</fb:control>				
					</fb:FilterGroupItem>				
				</fb:filterGroupItems>				
		    </fb:FilterBar>
	    
			<Table
				id="table"
				width="auto"
				class="sapUiResponsiveMargin"
				items="{
					path: '/PMNotifications',
					sorter: {
						path: 'Maintenancenotification',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField
							id="searchField"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearch"
							width="auto">
						</SearchField>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="notifyTitle">
						<Text text="{/#PMNotifications/Maintenancenotification/@sap:label}" id="MaintenancenotificationLabel"/>
					</Column>
					<Column id="notifyType">
						<Text text="{/#PMNotifications/Notificationtypename/@sap:label}" id="NotificationtypeLabel"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier 
							title="{Maintenancenotification}"
							text="{Notificationtext}"/>
							
							<Text text="{Notificationtypename}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
	</semantic:FullscreenPage>

</mvc:View>