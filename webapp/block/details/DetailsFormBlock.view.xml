<mvc:View 
	controllerName="com.evorait.evolite.evonotify.block.details.DetailsFormBlockController"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	xmlns:layout="sap.ui.layout"
	xmlns:smartField="sap.ui.comp.smartfield" 
	xmlns:smartForm="sap.ui.comp.smartform">
	
	<smartForm:SmartForm id="SmartNotificationForm" editTogglable="true" editToggled="onEditPress">
		
		<!--<smartForm:customToolbar>
			<Toolbar>
				<ToolbarSpacer />
				<Button icon="sap-icon://settings" press="onPressButton" />
			</Toolbar>
		</smartForm:customToolbar>-->
		
		<smartForm:Group label="General">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S6" />
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceNotification}"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{NotificationType}">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceOrder}"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{CreationDate}">
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{CreationTime}">
					<smartField:configuration>
						<smartField:Configuration controlType="timePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintPriority}"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{ReportedByUser}"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{CreatedByUser}"/>
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="Location">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S6" />
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceWorkCenterPlant}"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{AssetLocation}"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenancePlant}"/>
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="Dates">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S6" linebreak="true" />
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{RequiredStartDate}">
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{RequiredStartTime}">
					<smartField:configuration>
						<smartField:Configuration controlType="timePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{RequiredEndDate}">
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{RequiredEndTime}">
					<smartField:configuration>
						<smartField:Configuration controlType="timePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceRevision}"/>
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="Malfunctional">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S6" />
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MalfunctionStartDate}">
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MalfunctionStartTime}">
					<smartField:configuration>
						<smartField:Configuration controlType="timePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MalfunctionEndDate}">
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MalfunctionEndTime}">
					<smartField:configuration>
						<smartField:Configuration controlType="timePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintObjectDowntimeDuration}"></smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceObjectIsDown}"></smartField:SmartField>
			</smartForm:GroupElement>
		</smartForm:Group>
		
	</smartForm:SmartForm>
</mvc:View>