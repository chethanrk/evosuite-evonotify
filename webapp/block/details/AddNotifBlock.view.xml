<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:smartField="sap.ui.comp.smartfield" xmlns:smartForm="sap.ui.comp.smartform" controllerName="com.evorait.evonotify.block.details.AddNotifBlockController">
	
	<smartForm:SmartForm id="idNewNotificationForm" editable="{viewModel>/editMode}">
		
		<smartForm:Group label="{i18n>@GENERAL}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{NotificationText}" />
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{NotificationType}">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintPriority}" >
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{ReportedByUser}" />
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="{i18n>tit.malfunctionalSection}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MalfunctionStartDate}" >
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MalfunctionStartTime}" />
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MalfunctionEndDate}" >
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MalfunctionEndTime}" />
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceObjectIsDown}" />
			</smartForm:GroupElement>
		</smartForm:Group>

		<smartForm:Group label="Description">
			<smartForm:layout>
				<layout:GridData span="L12 M12 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<TextArea value="{MaintNotificationLongText}" rows="8" editable="{viewModel>/editMode}" growing="true"/>
			</smartForm:GroupElement>
		</smartForm:Group>

		<smartForm:Group label="{i18n>tit.refObjectsSection}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{TechnicalObject}"  />
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{Assembly}" >
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="{i18n>tit.datesSection}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{RequiredStartDate}" >
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{RequiredStartTime}" />
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{RequiredEndDate}" >
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{RequiredEndTime}"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceRevision}" />
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="{i18n>tit.locationSection}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceWorkCenterPlant}" >
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>	
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{AssetLocation}" >
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>	
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{ABCIndicator}" >
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>	
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenancePlant}">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>	
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="{i18n>tit.responsibilitySection}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenancePlanningPlant}" >
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>						
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenancePlannerGroup}" >
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>						
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceWorkCenter}" >
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>						
			</smartForm:GroupElement>
		</smartForm:Group>
		
	</smartForm:SmartForm>
</mvc:View>