<mvc:View 
	controllerName="com.evorait.evolite.evonotify.block.causes.CausesTableBlockController"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc">
	
	<Table width="auto" class="sapUiNoMargin"
		items="{path : 'to_PMNotificationCause',
                sorter : {
                    path : 'MaintenanceNotificationCause',
                    descending : false
                }}"
		noDataText="{objectView>/tableNoDataText}"
		busyIndicatorDelay="{objectView>/tableBusyDelay}"
		growing="false"
		growingScrollToLoad="false">
		
		<columns>
			<Column>
				<Text text="{/#PMNotificationItem/MaintenanceNotificationCause/@sap:label}"/>
			</Column>
			<Column>
				<Text text="{/#PMNotificationItem/MaintNotifCauseCodeGroup/@sap:label}"/>
			</Column>
		</columns>

		<items>
			<ColumnListItem type="Navigation" press="onPressItem">
				<cells>
					<ObjectIdentifier 
					title="{MaintenanceNotificationCause}"
					text="{MaintNotifCauseText}"/>
					<Text text="{MaintNotifCauseCodeGroup} {MaintNotifCauseCodeGroupName}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>