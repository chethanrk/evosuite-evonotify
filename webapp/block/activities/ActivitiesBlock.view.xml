<mvc:View controllerName="com.evorait.evosuite.evonotify.block.activities.ActivitiesBlockController" xmlns="sap.m"
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
	<smartTable:SmartTable height="100%" width="100%" id="notificationActivityTable" tableType="ResponsiveTable" useExportToExcel="false"
		header="{i18n>tit.items}" useVariantManagement="true" useTablePersonalisation="true" showRowCount="true"
		persistencyKey="com.evorait.evosuite.evonotify.activityTable" enableAutoBinding="true" demandPopin="true"
		entitySet="PMNotificationActivitySet" tableBindingPath="NotificationToActivity" beforeRebindTable="onBeforeRebindTable"
		requestAtLeastFields="ObjectKey,NOTES">
		<smartTable:customToolbar>
			<OverflowToolbar design="Transparent">
				<ToolbarSpacer/>
				<core:ExtensionPoint name="TableExtP|NotificationDetail|PMNotificationActivitySet|CustomToolbar"/>
				<OverflowToolbarButton icon="sap-icon://add" text="{i18n>btn.add}" tooltip="{i18n>btn.add}" press="onPressAdd"
					visible="{ parts: [{path: 'viewModel>/enableNotificationChange'},{path: 'user>/ENABLE_ACTIVITY_CREATE'},{path: 'viewModel>/editMode'}], formatter:'.formatter.isVisible'}"
					enabled="{viewModel>/validatedIw22Auth}"/>
				<OverflowToolbarButton icon="sap-icon://edit" text="{i18n>btn.edit}" tooltip="{i18n>btn.edit}" press="onPressEdit"
					enabled="{viewModel>/singleSelectedActivity}"
					visible="{ parts: [{path: 'viewModel>/enableNotificationChange'},{path: 'user>/ENABLE_ACTIVITY_UPDATE'},{path: 'viewModel>/editMode'}], formatter:'.formatter.isVisible'}"/>
				<OverflowToolbarButton icon="sap-icon://delete" text="{i18n>btn.delete}" tooltip="{i18n>btn.delete}" press="onPressDelete"
					visible="{ parts: [{path: 'viewModel>/enableNotificationChange'},'user>/ENABLE_ACTIVITY_DELETE',{path: 'viewModel>/editMode'}], formatter:'.formatter.isVisible'}"
					enabled="{viewModel>/validatedIw22Auth}"/>
			</OverflowToolbar>
		</smartTable:customToolbar>
		<!-- layout data used to make the table growing but the filter bar fixed -->
		<smartTable:layoutData>
			<FlexItemData growFactor="1" baseSize="0%"/>
		</smartTable:layoutData>
		<Table growing="true" mode="MultiSelect" selectionChange="onPressItem">
			<columns>
				<core:ExtensionPoint name="TableExtP|NotificationDetail|PMNotificationActivitySet|CustomColumn"/>
				<Column width="5rem">
					<customData>
						<core:CustomData key="p13nData" value='\{"columnKey": "NOTES", "columnIndex":"2"}'/>
					</customData>
					<Text text="{i18n>tit.showLongText}"></Text>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<core:ExtensionPoint name="TableExtP|NotificationDetail|PMNotificationActivitySet|CustomCell"/>
						<Button icon="sap-icon://show-edit" type="Default" press="showLongText" visible="{= ${NOTES} !== '' }"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</smartTable:SmartTable>
</mvc:View>