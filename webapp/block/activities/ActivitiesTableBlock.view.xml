<mvc:View 
	controllerName="com.evorait.evolite.evonotify.block.activities.ActivitiesTableBlockController"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartField="sap.ui.comp.smartfield">
	
	<Table id="notificationActivityTable" width="auto" class="sapUiNoMargin"
		items="{path : 'to_PMNotificationActivity',  
                sorter : {
                    path : 'MaintNotificationActivity',
                    descending : false
                }}"
		noDataText="{objectView>/tableNoDataTextActivities}"
		busyIndicatorDelay="{objectView>/tableBusyDelay}"
		growing="false"
		growingScrollToLoad="false">
		<columns>
			<Column>
				<Text text="{/#PMNotificationActivity/MaintNotificationActivity/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Desktop">
				<Text text="{/#PMNotificationActivity/MaintNotifActivityCodeGroup/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Desktop">
				<Text text="{/#PMNotificationActivity/MaintNotifActivityCode/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Small">
				<Text text="{/#PMNotificationActivity/PlannedStartDate/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Small">
				<Text text="{/#PMNotificationActivity/PlannedEndDate/@sap:label}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation" press="onPressItem">
				<cells>
					<ObjectIdentifier 
					title="{MaintNotificationActivity}"
					text="{MaintNotifActyTxt}"/>
					<Text text="{MaintNotifActivityCodeGrpName} ({MaintNotifActivityCodeGroup})"/>
					<Text text="{MaintNotifActivityCodeName} ({MaintNotifActivityCode})"/>
					<Text text="{path: 'PlannedStartDate', formatter:'.formatter.date'} {path: 'PlannedStartTime', formatter:'.formatter.time'}"/>
					<Text text="{path: 'PlannedEndDate', formatter:'.formatter.date'} {path: 'PlannedEndTime', formatter:'.formatter.time'}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>