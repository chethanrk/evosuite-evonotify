<mvc:View 
	controllerName="com.evorait.evonotify.block.activities.ActivitiesFormBlockController"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns:smartField="sap.ui.comp.smartfield" 
	xmlns:smartForm="sap.ui.comp.smartform">
	
	<smartForm:SmartForm id="SmartNotificationActivityForm" editTogglable="false" editToggled="onEditPress" editable="{viewModel>/editMode}">
		<smartForm:Group label="{i18n>generalSectionTitle}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceNotification}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField id="MaintenanceNotificationItem" value="{MaintenanceNotificationItem}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotificationActivity}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifActyTxt}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="{i18n>codeSectionTitle}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifActivityCodeGroup}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifActivityCode}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="{i18n>datesSectionTitle}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12" linebreak="true"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{PlannedStartDate}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{PlannedStartTime}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{PlannedEndDate}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="datePicker" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{PlannedEndTime}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
		</smartForm:Group>
	</smartForm:SmartForm>
</mvc:View>