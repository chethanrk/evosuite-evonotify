<mvc:View 
	controllerName="com.evorait.evolite.evonotify.block.items.ItemsTableBlockController"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartField="sap.ui.comp.smartfield">
	
	<Table
		id="notificationItemsTable"
		width="auto"
		class="sapUiNoMargin"
		items="{
                path : 'to_PMNotificationItem',
                sorter : {
                    path : 'MaintenanceNotificationItem',
                    descending : false
                }
            }"
		noDataText="{objectView>/tableNoDataText}"
		busyIndicatorDelay="{objectView>/tableBusyDelay}"
		growing="false"
		growingScrollToLoad="false">

		<columns>
			<Column>
				<Text text="{/#PMNotificationItem/MaintenanceNotificationItem/@sap:label}"/>
			</Column>
			<Column>
				<Text text="{/#PMNotificationItem/MaintNotifObjPrtCodeGroup/@sap:label}"/>
			</Column>
			<Column>
				<Text text="{/#PMNotificationItem/MaintNotifObjPrtCode/@sap:label}"/>
			</Column>
		</columns>

		<items>
			<ColumnListItem
				type="Navigation"
				press="onPressItem">
				<cells>
					<ObjectIdentifier 
					title="{MaintenanceNotificationItem}"
					text="{MaintNotifItemText}"/>
					<smartField:SmartField value="{MaintNotifObjPrtCodeGroup}" editable="false">
						<smartField:configuration>
							<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
						</smartField:configuration>
					</smartField:SmartField>
					<smartField:SmartField value="{MaintNotifObjPrtCode}" editable="false">
						<smartField:configuration>
							<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
						</smartField:configuration>
					</smartField:SmartField>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>