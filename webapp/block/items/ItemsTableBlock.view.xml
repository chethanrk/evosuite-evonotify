<mvc:View 
	controllerName="com.evorait.evolite.evonotify.block.items.ItemsTableBlockController"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc">
	
	<Table
		id="notificationItemsTable"
		width="auto"
		class="sapUiNoMargin"
		items="{
                path : 'itemsView>/items',
                sorter : {
                    path : 'MaintenanceNotificationItem',
                    descending : false
                }
            }"
		noDataText="{itemsView>/tableNoDataText}"
		busyIndicatorDelay="{itemsView>/tableBusyDelay}"
		growing="false"
		growingScrollToLoad="false"
		updateFinished="onUpdateFinished">

		<headerToolbar>
			<Toolbar>
				<Title id="tableHeader" text="{itemsView>/itemsTableTitle}"/>
			</Toolbar>
		</headerToolbar>

		<columns>
			<Column>
				<Text text="{/#PMNotificationItem/MaintenanceNotificationItem/@sap:label}"/>
			</Column>
			<Column>
				<Text text="{/#PMNotificationItem/MaintNotifObjPrtCodeGroup/@sap:label}"/>
			</Column>
		</columns>

		<items>
			<ColumnListItem
				type="Navigation"
				press="onPressItem">
				<cells>
					<ObjectIdentifier 
					title="{itemsView>MaintenanceNotificationItem}"
					text="{itemsView>MaintNotifItemText}"/>
					<Text text="{itemsView>MaintNotifObjPrtCodeGroupName}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>