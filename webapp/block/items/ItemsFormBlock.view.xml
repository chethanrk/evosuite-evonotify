<mvc:View 
	controllerName="com.evorait.evonotify.block.items.ItemsFormBlockController"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns:smartField="sap.ui.comp.smartfield" 
	xmlns:smartForm="sap.ui.comp.smartform">
	
	<smartForm:SmartForm id="SmartNotificationItemForm" editTogglable="false" editToggled="onEditPress" editable="{viewModel>/editMode}">
		<smartForm:Group label="{i18n>generalSectionTitle}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceNotification}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceNotificationItem}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifItemText}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
		</smartForm:Group>
		<smartForm:Group label="{i18n>objectSectionTitle}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifObjPrtCodeGroup}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifObjPrtCode}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
		</smartForm:Group>
		<smartForm:Group label="{i18n>damageSectionTitle}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12" linebreak="true"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifDamageCodeGroup}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifDamageCode}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
		</smartForm:Group>
	</smartForm:SmartForm>
</mvc:View>