<mvc:View 
	controllerName="com.evorait.evolite.evonotify.block.causes.CausesTableBlockController"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartField="sap.ui.comp.smartfield" >
	
	<Table id="notificationCausesTable" width="auto" class="sapUiNoMargin"
		items="{path : 'to_PMNotificationCause',
                sorter : {
                    path : 'MaintenanceNotificationCause',
                    descending : false
                }}"
		noDataText="{objectView>/tableNoDataTextCauses}"
		busyIndicatorDelay="{objectView>/tableBusyDelay}"
		growing="false"
		growingScrollToLoad="false">
		
		<columns>
			<Column>
				<Text text="{/#PMNotificationCause/MaintenanceNotificationCause/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Small">
				<Text text="{/#PMNotificationCause/MaintNotifCauseCodeGroup/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Small">
				<Text text="{/#PMNotificationCause/MaintNotificationCauseCode/@sap:label}"/>
			</Column>
		</columns>

		<items>
			<ColumnListItem type="Navigation" press="onPressItem">
				<cells>
					<ObjectIdentifier 
					title="{MaintenanceNotificationCause}"
					text="{MaintNotifCauseText}"/>
					<smartField:SmartField value="{MaintNotifCauseCodeGroup}" editable="false">
						<smartField:configuration>
							<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
						</smartField:configuration>
					</smartField:SmartField>
					<smartField:SmartField value="{MaintNotificationCauseCode}" editable="false">
						<smartField:configuration>
							<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
						</smartField:configuration>
					</smartField:SmartField>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>