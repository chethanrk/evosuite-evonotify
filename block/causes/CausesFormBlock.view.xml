<mvc:View 
	controllerName="com.evorait.evolite.evonotify.block.causes.CausesFormBlockController"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns:smartField="sap.ui.comp.smartfield" 
	xmlns:smartForm="sap.ui.comp.smartform">
	
	<smartForm:SmartForm id="SmartNotificationCauseForm" editTogglable="false" editToggled="onEditPress" editable="{objectView>/editMode}">
		<smartForm:Group label="{i18n>generalSectionTitle}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceNotification}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceNotificationItem}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintenanceNotificationCause}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifCauseText}" editableChanged="onEditChanged"/>
			</smartForm:GroupElement>
		</smartForm:Group>
		
		<smartForm:Group label="{i18n>codeSectionTitle}">
			<smartForm:layout>
				<layout:GridData span="L6 M6 S12"/>
			</smartForm:layout>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotifCauseCodeGroup}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
			<smartForm:GroupElement>
				<smartField:SmartField value="{MaintNotificationCauseCode}" editableChanged="onEditChanged">
					<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId"/>
					</smartField:configuration>
				</smartField:SmartField>
			</smartForm:GroupElement>
		</smartForm:Group>
		
	</smartForm:SmartForm>
</mvc:View>