<mvc:View 
	controllerName="com.evorait.evolite.evonotify.block.tasks.TasksTableBlockController"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartField="sap.ui.comp.smartfield">
	
	<Table id="notificationTaskTable" width="auto" class="sapUiNoMargin"
		items="{path : 'Tasks>/modelData',
                sorter : {
                    path : 'MaintenanceNotificationTask',
                    descending : false
                }}"
		noDataText="{objectView>/tableNoDataTextTasks}"
		busyIndicatorDelay="{objectView>/tableBusyDelay}"
		growing="false"
		growingScrollToLoad="false">
		<columns>
			<Column>
				<Text text="{/#PMNotificationTask/MaintenanceNotificationTask/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Desktop">
				<Text text="{/#PMNotificationTask/MaintNotifTaskCodeGroup/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Desktop">
				<Text text="{/#PMNotificationTask/MaintNotifTaskCode/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Small">
				<Text text="{/#PMNotificationTask/PlannedStartDate/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Small">
				<Text text="{/#PMNotificationTask/PlannedEndDate/@sap:label}"/>
			</Column>
			<Column demandPopin="true" minScreenWidth="Small">
				<Text text="{/#PMNotificationTask/ResponsiblePerson/@sap:label}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem type="Navigation" press="onPressItem">
				<cells>
					<ObjectIdentifier 
					title="{Tasks>MaintenanceNotificationTask}"
					text="{Tasks>MaintNotifTaskText}"/>
					<Text text="{Tasks>MaintNotiTtaskCodeGroupName} ({Tasks>MaintNotifTaskCodeGroup})"/>
					<Text text="{Tasks>MaintNotifTaskCodeName} ({Tasks>MaintNotifTaskCode})"/>
					<Text text="{path:'Tasks>/PlannedStartDate', formatter:'.formatter.date'} {path:'Tasks>/PlannedStartTime', formatter:'.formatter.time'}"/>
					<Text text="{path:'Tasks>/PlannedEndDate', formatter:'.formatter.date'} {path:'Tasks>/PlannedEndTime', formatter:'.formatter.time'}"/>
					<Text text="{Tasks>ResponsiblePerson}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>