<mvc:View 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:semantic="sap.m.semantic" 
	xmlns:fb="sap.ui.comp.filterbar" 
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" 
	xmlns:smartTable="sap.ui.comp.smarttable" 
	controllerName="com.evorait.evolite.evonotify.controller.Worklist">
	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" title="{i18n>worklistViewTitle}" floatingFooter="false">
		<semantic:customFooterContent>
                    <Button icon="sap-icon://add" text="{i18n>newNotification}" press="onAddPress" />
          </semantic:customFooterContent>
		<semantic:content>
	    	<smartFilterBar:SmartFilterBar 
	    		id="NotificationFilter" 
	    		entityType="PMNotification"
	    		expandAdvancedArea="true" 
	    		showGoButton="true">
	        	<smartFilterBar:controlConfiguration>
	            	<smartFilterBar:ControlConfiguration id="__configuration0"/>
	        	</smartFilterBar:controlConfiguration>
	    	</smartFilterBar:SmartFilterBar>
	    	<smartTable:SmartTable 
	    		height="100%" 
	    		width="100%" 
	    		direction="Column" 
	    		fitContainer="true" 
	    		tableType="ResponsiveTable" 
	    		enableAutoBinding="true" 
	    		id="NotificationTable" 
	    		entitySet="PMNotifications" 
	    		smartFilterId="NotificationFilter"
	    		showRowCount="true"
	    		header="{i18n>worklistTableTitle}"
	    		demandPopin="true">
	    		<Table id="responsiveNotificationTable" growing="true">
	    			<ColumnListItem type="Navigation" press="onPress">
	    			</ColumnListItem>
	    		</Table>
	    	</smartTable:SmartTable>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>