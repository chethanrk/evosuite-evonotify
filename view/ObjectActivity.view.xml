<mvc:View
	controllerName="com.evorait.evolite.evonotify.controller.ObjectActivity"
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic" 
	xmlns:form="sap.ui.layout.form" 
	xmlns:core="sap.ui.core" 
	xmlns:uxap="sap.uxap"
	xmlns:activities="com.evorait.evolite.evonotify.block.activities">

	<Page id="objectActivityPage" title="{i18n>activityViewTitle}" class="sapUiNoContentPadding" showNavButton="true" navButtonPress="onNavBack">
		
		<uxap:ObjectPageLayout id="objectActivityPageLayout" enableLazyLoading="false" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}" >
			<uxap:headerTitle>
				<uxap:ObjectPageHeader id="objectActivityPageHeader" objectTitle="{objectView>/Title}" objectSubtitle="{MaintNotificationActivity}">
					<uxap:actions>
						<uxap:ObjectPageHeaderActionButton text="{i18n>objectHeaderActionEdit}" press="onPressEdit" type="Emphasized" visible="{objectView>/showMode}"/>
						<uxap:ObjectPageHeaderActionButton text="{i18n>objectHeaderActionCancel}" press="onPressCancel" visible="{objectView>/editMode}"/>
						<uxap:ObjectPageHeaderActionButton text="{i18n>objectHeaderActionSave}" press="onPressSave" type="Emphasized" visible="{objectView>/editMode}"/>
					</uxap:actions>
				</uxap:ObjectPageHeader>
			</uxap:headerTitle>
			
			<uxap:headerContent></uxap:headerContent>
			
			<uxap:sections>
				<uxap:ObjectPageSection title="{i18n>generalSectionTitle}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
								<activities:ActivitiesFormBlock id="activitiesFormBlock" editPress="onFiredEditMode"/>
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
			</uxap:sections>
		</uxap:ObjectPageLayout>
		
	</Page>
</mvc:View>